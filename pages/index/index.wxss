/* 轮播图 */
.slide {
  width: 100%;
  height: 480rpx;
}
.slide .image {
  width: 100%;
  height: 100%;
}

/* 列表项 */
.list-item {
  background-color: #fff;
  margin-top: 40rpx;
}
.title {
  font-size: 12px;
  padding: 20rpx;
}
.title image {
  width: 36rpx;
  height: 36rpx;
}
.content {
  height: 340rpx;
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.content  .inner {
  display: flex; 
}
.movie-item {
  margin: 0 10rpx;
  width: 200rpx;
  font-size: 10px;
}
.movie-item:nth-child(1) {
  margin: 0rpx;
}
.movie-item  image {
 width: 180rpx;
 height: 250rpx;
}
.movie-item text {
  width: 100%;
  display: inline-block;
  text-align: center;
}