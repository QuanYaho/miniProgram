.container {
  display: flex;
  flex-direction: column;
  padding: 50rpx 80rpx;
  box-sizing: border-box;
}
.background {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: .1;
} 
.main {
  display: flex;
  flex-direction: column;
}
.main image {
  height: 800rpx;
  width: 100%;
}
.main .m-title {
  width: 100%;
  height: 80rpx;
  color: #000;
}
 .m-desc {
  font-size: 12px;
  height: 50rpx;
}
.summary {
  margin: 60rpx 0  30rpx 0;
}
.summary  .sum-title {
  font-size: 14px;
  color: #000;
}
.summary .sum-content {
  font-size: 12px;
  text-indent:24px
}