.item {
  width: 100%;
  height: 180rpx;
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.item .desc {
  width: 460rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.item image {
  width: 140rpx;
  height: 180rpx;
}
.item text {
  margin-bottom: 10rpx;
}
.item .l-title {
  color: #000;
  font-size: 15px;
}
.item .s-title {
  color: #bbb;
  font-size: 10px;
}
.director {
  font-size: 10px;
}
.score {
  color: #F56C58;
  font-size: 14px;
}
.header {
  margin-top: 10rpx;
  display: flex;
  height: 80rpx;
  align-items: center;
}
input {
  border: 1rpx solid #bbb;
  color: #666;
  width: 82%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.header .text{
  width: 18%;
  height: 100%;
  background-color: #bbb;
  color: #fff;
}